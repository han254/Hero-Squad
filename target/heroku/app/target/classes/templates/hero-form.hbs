{{#partial "content"}}
    <section class="landing-pg">
        <form class="form" id="myForm" action="/new/hero" method="post">
            <h1>Create A Hero</h1>
            <div class="form-group">
                <input type="text" placeholder="Hero's Name" name="name" required class="form-control">
            </div>
            <div class="form-group">
                <input type="number" placeholder="Hero's Age" name="age" required class="form-control">
            </div>
            <div class="form-group">
                <input type="text" placeholder="Special powers" name="power" required class="form-control">
            </div>
            <div class="form-group">
                <input type="text" placeholder="Weakness" name="weakness" required class="form-control">
            </div>

            <input class="btn" type="submit" value="CREATE">
        </form>
    </section>
{{/partial}}
{{> layout.hbs}}