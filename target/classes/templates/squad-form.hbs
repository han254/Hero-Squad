{{#partial "content"}}
    <section class="landing-pg">
        <form class="form" action="/squad/new" method="post">
            <h1>Create Your Squad</h1>
            <div class="form-group">
                <input type="text" placeholder="Enter the Name of Your Squad" name="squadName" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="number" placeholder="Enter the Squad Size" name="squadSize"  class="form-control"  required>
            </div>
            <div class="form-group">
                <input type="text" placeholder="Enter the squad mission" name="mission"  class="form-control"  required>
            </div>
            <input type="submit" class="btn" value="Create Squad">
        </form>
    </section>
{{/partial}}
{{> layout.hbs}}
